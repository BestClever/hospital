<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.aaa.mapper.DoctorMapper">
 <select id="doctorList" resultType="doctor">
     select*from doctor d,departments de,registeredtype r where d.departmentId=de.departmentId and d.registeredId=r.registeredId
         <if test="doctorName!=null and doctorName!=''">
          and   d.doctorName like concat('%',concat(#{doctorName},'%'))
         </if> ORDER BY doctorId asc

 </select>
    <insert id="addDoctor" parameterType="doctor">
        insert into doctor(doctorName,departmentId,registeredId)values(#{doctorName},#{departmentId},#{registeredId})
    </insert>
    <update id="editDoctor" parameterType="doctor">
        update doctor set doctorName=#{doctorName},departmentId=#{departmentId},registeredId=#{registeredId} where doctorId=#{doctorId}
    </update>
    <delete id="deleteDoctor" parameterType="Integer">
        delete from doctor where DoctorId=#{DoctorId}
    </delete>
    <select id="findAllDepartments" resultType="Departments">
        select*from departments
    </select>
    <select id="findAllRegisteredtype" resultType="Registeredtype">
        select*from Registeredtype
    </select>
    <select id="count" resultType="int">
        select count(*) from doctor where doctorName=#{doctorName}
    </select>
</mapper>